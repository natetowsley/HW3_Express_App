<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head.ejs") %>
    <title>Weather</title>
</head>
<body>
    <%- include("partials/nav.ejs") %>
    <div class="smallCard" id="cityInfo">
        <h1 id="cityName" class="text-center"><%= city.city%></h1>
        <h5 id="coords" class="text-center"><%=data.lat%>, <%=data.lon%></h5>
    </div>
    <div id="current" class="text-center">
        <h2 id="temp" class="smallCard"><%=data.current.temp%> Â°F</h2>
        <!-- <img WEATHER IMAGE HERE> -->
        <div class="myRow">
            <div class="smallCard">
                <p class="fs-4">Clouds</p> 
                <img class="smallCardImg" src="\img\2106101.png">
                <% if (data.current.clouds >= 80) { %>
                    <p class="fs-5">Very Cloudy</p>
                <% } else if (data.current.clouds >= 40) { %>
                    <p class="fs-5">Cloudy</p>
                <% } else if (data.current.clouds >= 10) { %>
                    <p class="fs-5">Slightly Cloudy</p>
                <% } else { %>
                    <p class="fs-5">No Clouds</p>
                <% } %>
            </div>
            <div class="smallCard">
                <p class="fs-4">Wind</p>    
                <img class="smallCardImg" src="\img\wind.png">
                <p class="fs-4"><%=data.current.wind_speed%> mph</p>
            </div>
        </div>
    </div>
    <br>
    <div id="week">

    </div>
</body>
</html>